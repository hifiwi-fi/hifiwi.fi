{
  "name": "hifiwi.fi",
  "description": "HifiWi.fi website",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "author": "Bret Comnes <bcomnes@gmail.com> (https://bret.io)",
  "bugs": {
    "url": "https://github.com/hifiwi-fi/hifiwi.fi/issues"
  },
  "devDependencies": {
    "@siteup/cli": "^2.2.4",
    "browser-sync": "^2.26.7",
    "mkdirp": "^1.0.4",
    "npm-run-all2": "^5.0.0",
    "rimraf": "^3.0.2",
    "snazzy": "^9.0.0",
    "standard": "^16.0.0",
    "uland-isomorphic": "^1.0.0",
    "auto-changelog": "^2.0.0",
    "gh-release": "^6.0.0"
  },
  "dependencies": {
    "fragmentions": "^1.1.3",
    "highlight.js": "^11.5.0",
    "mine.css": "^5.0.2"
  },
  "homepage": "https://github.com/hifiwi-fi/hifiwi.fi",
  "keywords": [],
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/hifiwi-fi/hifiwi.fi.git"
  },
  "scripts": {
    "test": "run-s test:*",
    "test:lint": "standard | snazzy",
    "test:build": "run-s build",
    "build": "npm run clean && run-p build:*",
    "build:siteup": "siteup",
    "watch": "npm run clean && run-p watch:*",
    "watch:serve": "browser-sync start --server 'public' --files 'public'",
    "watch:siteup": "npm run build:siteup -- --watch",
    "generate-icon": "npx gravatar-favicons --config favicon-config.cjs",
    "clean": "rimraf public && mkdirp public",
    "start": "npm run watch",
    "release": "git push --follow-tags && gh-release -y",
    "version": "run-s version:*",
    "version:changelog": "auto-changelog -p --template keepachangelog auto-changelog --breaking-pattern 'BREAKING CHANGE:'",
    "version:git": "git add CHANGELOG.md"
  },
  "standard": {
    "ignore": [
      "public"
    ]
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/bcomnes"
  }
}
